cat > .gcloudignore << 'EOF'
# Node modules and dependencies
node_modules/
/.pnp
.pnp.*
.yarn/*
!.yarn/patches
!.yarn/plugins
!.yarn/releases
!.yarn/versions

# Next.js build outputs
/.next/
/out/
/build

# Database files
db/
*.db
*.sqlite
*.sqlite3

# Environment files
.env*

# Git
.git/
.gitignore

# Logs
npm-debug.log*
yarn-debug.log*
yarn-error.log*
.pnpm-debug.log*
*.log

# OS files
.DS_Store
*.pem
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# IDE
.vscode/
.idea/
*.swp
*.swo

# Testing
/coverage
__tests__/
*.test.js
*.test.ts
*.spec.js
*.spec.ts

# Documentation
README.md
docs/
*.md

# TypeScript
*.tsbuildinfo
next-env.d.ts

# Certificates
certificates/

# Large assets (ถ้ามี)
public/images/
public/videos/
public/assets/

# Vercel
.vercel
EOF